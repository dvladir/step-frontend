{
  "NAME": "Step OSS frontend",
  "OS": "LINUX",
  "LOCK": "STEP",

  "ACTIONS": [
    {
      "ACTION": "COMPILE",
      "TYPE": "NPM",
      "PARAMETERS": [
        {
          "NAME": "DEVELOPMENT",
          "URL": "nexus-staging https://nexus-enterprise.exense.ch/repository/staging-npm/"
        },
        {
          "NAME": "PRODUCTION",
          "URL": "nexus-staging https://nexus-enterprise.exense.ch/repository/staging-npm/"
        }
      ],
      "ACTIONS": [{ "FOLDER": "." }, { "FOLDER": "projects/step-core" }]
    },
    {
      "ACTION": "PUSH",
      "TYPE": "MAVEN",
      "PARAMETERS": [
        {
          "NAME": "DEVELOPMENT",
          "URL": "nexus-staging::https://nexus-enterprise.exense.ch/repository/staging-maven/"
        },
        {
          "NAME": "PRODUCTION",
          "URL": "nexus-staging::https://nexus-enterprise.exense.ch/repository/staging-maven/"
        }
      ],
      "ACTIONS": [
        {
          "ORIGIN": "dist/step-app",
          "DESTINATION": "ch.exense.step.frontend:step-app:${VERSION}",
          "PACKAGING": "jar"
        },
        {
          "ORIGIN": "dist/step-app",
          "DESTINATION": "ch.exense.step.frontend:step-app-${BRANCH}:${VERSION}",
          "PACKAGING": "jar"
        }
      ]
    }
  ],
  "AFTER": "step-oss-upgrade-distribution"
}
